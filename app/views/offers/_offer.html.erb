<li id="<%= offer.id %>">
  <span class="content">
     <%= link_to offer.user.name, user_path(offer.user) %> =
     <%= offer.price %> рублей.
  </span>

  <p> <%= offer.adword %> </p> 

  <small>

  <% if !current_user.nil? && current_user.admin? %>
    <%= link_to 'delete', offer, method: :delete, data: {confirm: "Delete offer?"} %>
  <% end %>

  <% if current_user.nil? && offer.contract.close_contract == false %>
    <%= link_to 'Принять предложение', bang_path(offer.id) %>
  <% end %>

  </small>

</li>
<hr/>

