<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
	<h1> <%= @user.name %> </h1>
	<h4> < <%= @user.email %> > <%= @user.mphone %> </h4>
        <h5> level <%= @user.offers.count %> </h5>
        
    </section>
  </aside>
  <div class="span8">
      <% if @contracts.any? %>
       <h1> Смотрит на <%= @contract_c = @contracts.count %> 
         <% @contract_c = @contract_c.to_s.split('')[-1].to_i %>
         <% if @contract_c > 4  or @contract_c  == 0 %>
            предзаказов
         <% elsif @c_o_c == 1 %> 
            предзаказ
         <% else %>
            предзаказа
         <% end %>
        </h1>

       <ol>
          <%= render @contracts %>
       </ol>
  <% end%>

  </div>
</div>
