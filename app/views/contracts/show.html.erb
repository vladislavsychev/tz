<% provide(:title, "#{@contract.id}") %>

<div class="row">

<h1>id: <%= @contract.id %></h1>
<h2> <%= @contract.contractor_name %>
 | <%= @contract.contractor_mphone %> 
 | <%= @contract.contractor_email %></h2>

<%= @contract.time_rent %> | 
<%= @contract.date_rent %> <br/>
<%= @contract.body_contract %> <br/>
Время аренды: <%= @contract.lease_time %> часа/часов</br>


<% unless @contract.active? %>
  <div class="span2">
    <%= form_tag("/contracts/#{@contract.id}/valid", :method => "get") do %>
      <%= render 'valid_field' %>
      <%= submit_tag("Подтвердить предзаказ", class: "btn btn-large btn-success") %>
    <% end %>
  </div>
<% end %>
  <% if !current_user.nil? && current_user.admin? %>
   <%= link_to "delete", @contract, method: :delete, data: { confirm: "You sure?" } %>
|   <%= link_to "edit", edit_contract_path(@contract.id) %>
  <% end %>

</div>
