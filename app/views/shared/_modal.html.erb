<!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
     <h3 id="myModalLabel">Восстановление пароля</h3>
   </div>  
  <div class="modal-body">
     <p>Для получения нового пароля введите свой email. Пароль будет сформирован и выслан немедленно.</p>
   
    <%= form_for(:user, url: newpass_path) do |f| %>

      <%= f.label :email, 'Ваш email:' %>
      <%= f.text_field :email %>


    </div>
    <div class="modal-footer">
      <button  class="btn btn-inverse" data-dismiss="modal" aria-hidden="true">Close</button>
      <%= f.submit "Получить новый пароль", class: "btn btn-large btn-primary" %>
    <% end %> 
    </div>
</div>
